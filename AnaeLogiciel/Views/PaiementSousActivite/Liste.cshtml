@{
    ViewBag.Title = "title";
    Layout = "_LayoutGlobalProject";
    int idoccurencesousactivite = ViewBag.idoccurencesousactivite;
    List<PaiementOccurenceSousActivite> liste = ViewData["listepaiement"] as List<PaiementOccurenceSousActivite>;
    double reste = ViewBag.reste;
    double budget = ViewBag.budget;
    double total = ViewBag.total;
}

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f7f7f7;
            padding: 20px;
        }

        .dashboard {
            background-color: #fff;
            border: 1px solid #e0e0e0;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 80%;
            margin: 0 auto;
            padding: 20px;
        }

        h3 {
            font-size: 24px;
            margin: 0 0 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            text-align: left;
            padding: 12px;
        }

        th {
            background-color: #333;
            color: #fff;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .total {
            font-weight: bold;
        }

        form {
            margin-bottom: 20px;
        }

        form input[type="submit"] {
            background-color: #333;
            color: #fff;
            padding: 10px 15px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

        p {
            margin: 0;
            font-size: 18px;
        }
        
                .error-message {
                        color: red;
                    }
                  
    </style>
</head>
<body>
    <div class="dashboard">
        <form action="/PaiementSousActivite/VersInsertionPaiementSousActivite">
            <input type="hidden" name="idoccurencesousactivite" value="@idoccurencesousactivite">
            <input type="submit" value="Ajouter État de Paiement">
        </form>

        <h3>LISTE DE PAIEMENT</h3>

        <table>
            <thead>
                <tr>
                    <th>Technicien</th>
                    <th>Motif</th>
                    <th>Montant</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var v in liste)
                {
                    <tr>
                        <td>@v.Technicien.Email</td>
                        <td>@v.Motif</td>
                        <td>@v.Montant Ar</td>
                    </tr>   
                }
                <tr>
                    <td></td>
                    <td></td>
                    <td class="total">@total Ar</td>
                </tr>
            </tbody>
        </table>

        <p><strong>Budget:</strong> @budget Ar</p>
        <p><strong>Reste:</strong> @reste Ar</p>
        <p><strong><span class="error-message">@ViewBag.messageerreur</span></strong></p>
    </div>
</body>
</html>
