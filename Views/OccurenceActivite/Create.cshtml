@{
    Layout = "_LayoutGlobalProject";
    int idoccurenceresultat = ViewBag.idoccurenceresultat;
    List<Activite> liste = ViewData["listeactivite"] as List<Activite>;
}

<p style="color: red;">@ViewBag.messageerreur</p>

<form action="/OccurenceActivite/Create">
    <input type="hidden" name="idoccurenceresultat" value="@idoccurenceresultat">
    Choisir Activite:
    <br>
    <select name="idactivite" id="idactivite">
        @foreach (var v in liste)
        {
            <option value="@v.Id">@v.Nom</option>   
        }
    </select>
    <br>
    <input type="date" name="datedebut" placeholder="Date Debut">
    <br>
    <input type="date" name="datefin" placeholder="Date Fin">
    <br>
    <input type="text" name="budget" placeholder="Budget">
    <br>
    <input type="submit" value="inserer">
</form>